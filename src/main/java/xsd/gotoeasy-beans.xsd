<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns="http://www.gotoeasy.top/schema/beans"
	targetNamespace="http://www.gotoeasy.top/schema/beans">

	<!-- IOC容器Bean配置格式定义 -->
	<xs:element name="beans">
		<xs:complexType>
			<xs:choice minOccurs="0" maxOccurs="unbounded">
				<!-- beans标签包含 0~N个bean标签 -->
				<xs:element name="bean">
					<xs:complexType>
						<xs:sequence>
							<!-- bean标签包含 0~1个constructor构造方法标签，0个时通常不写 -->
							<xs:element name="constructor" minOccurs="0"
								maxOccurs="1">
								<xs:complexType>
									<xs:sequence>
										<!-- bean标签包含 0~N个arg标签 -->
										<xs:element name="arg" minOccurs="0"
											maxOccurs="unbounded">
											<xs:complexType>
												<!-- 构造方法参数用的arg标签，arg标签顺序即构造方法参数顺序，value、ref两者必选一个进行设定，设定value时需指定class -->
												<xs:attribute name="value" type="xs:string" />
												<xs:attribute name="class" type="xs:string" />
												<xs:attribute name="ref" type="xs:string" />
											</xs:complexType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>

							<!-- bean标签包含 0~N个property标签 -->
							<xs:element name="property" minOccurs="0"
								maxOccurs="unbounded">
								<xs:complexType>
									<!-- 用于注入的property标签，name必须设定，class+value、ref两者必选一个进行设定 -->
									<xs:attribute name="name" type="xs:string"
										use="required" />
									<xs:attribute name="class" type="xs:string" />
									<xs:attribute name="value" type="xs:string" />
									<xs:attribute name="ref" type="xs:string" />
								</xs:complexType>
							</xs:element>
						</xs:sequence>

						<!-- bean标签属性，id必须设定，class、class+value、ref三者必选一个进行设定 -->
						<xs:attribute name="id" type="xs:string"
							use="required" />
						<xs:attribute name="class" type="xs:string" />
						<xs:attribute name="value" type="xs:string" />
						<xs:attribute name="ref" type="xs:string" />
					</xs:complexType>
				</xs:element>
			</xs:choice>
		</xs:complexType>
	</xs:element>
</xs:schema>